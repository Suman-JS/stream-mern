<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/videos.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
      defer
    ></script>

    <!-- DataTables CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"
    />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- DataTables JS -->
    <script
      src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
      defer
    ></script>
    <script
      src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"
      defer
    ></script>

    <script src="/scripts/videos.js" defer></script>

    <title>Videos | Admin</title>
  </head>
  <body>
    <%- include ('partials/navbar') %>

    <main class="container mt-4">
      <h1>Videos</h1>
      <table id="videosTable" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        </thead>
        <tbody>
          <% videos.forEach((video) => { %>
          <tr>
            <td class="image-cell">
              <% if (video.imageUrl) { %>
              <img
                src="<%= video.imageUrl %>"
                alt="<%= video.title %>"
                class="img-thumbnail"
              />
              <% } else { %> No Image <% } %>
            </td>
            <td><%= video.title %></td>
            <td><%= video.createdAt.toLocaleString() %></td>
            <td><%= video.updatedAt.toLocaleString() %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <a href="/admin/video/upload">Upload video</a>
    </main>
  </body>
</html>
